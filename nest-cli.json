{
  "monorepo": true,
  "root": "apps/backend",
  "sourceRoot": "apps/backend/src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/backend/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [
            ".input.ts",
            ".args.ts"
          ],
          "introspectComments": true
        }
      }
    ]
  },
  "projects": {
    "backend": {
      "type": "application",
      "root": "apps/backend",
      "entryFile": "main",
      "sourceRoot": "apps/backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/backend/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "email": {
      "type": "application",
      "root": "apps/email",
      "entryFile": "main",
      "sourceRoot": "apps/email/src",
      "compilerOptions": {
        "tsConfigPath": "apps/email/tsconfig.app.json"
      }
    },
    "mail-sender": {
      "type": "library",
      "root": "libs/mail-sender",
      "entryFile": "index",
      "sourceRoot": "libs/mail-sender/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mail-sender/tsconfig.lib.json"
      }
    }
  }
}