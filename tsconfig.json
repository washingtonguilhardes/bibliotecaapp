{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@mailsender/mail-sender": [
        "libs/mail-sender/src"
      ],
      "@mailsender/mail-sender/*": [
        "libs/mail-sender/src/*"
      ]
    }
  }
}