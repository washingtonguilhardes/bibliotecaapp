  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Email Module",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/apps/email/src/main.ts",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Api Module",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/apps/api/src/main.ts",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/apps/api/**/*.js"
      ]
    }
  ]
}